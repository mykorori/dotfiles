{
    "editor.fontSize": 16,
    "editor.fontFamily": "'UbuntuMono Nerd Font Mono', 'TsukuARdGothic-Regular'",
    "editor.renderWhitespace": "boundary",
    "editor.fontLigatures": true,
    "editor.wordWrap": "on",
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "solid",
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Cake",
    "workbench.colorCustomizations": {
        "statusBar.background": "#88C0D0",
        "statusBar.noFolderBackground": "#88C0D0",
        "statusBar.debuggingBackground": "#88C0D0",
        "statusBar.foreground": "#3B4252"
    },

    // git
    "git.autofetch": true,
    "gitlens.gitExplorer.files.layout": "auto",
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true,
        "suppressUpdateNotice": false,
        "suppressWelcomeNotice": true
    },
    "gitlens.keymap": "alternate",
    "gitlens.historyExplorer.enabled": false,

    // languages
    "tslint.autoFixOnSave": true
}
